@model Entities.Models.DTO.IndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";


}


<link href="~/Content/Admin/src/plugins/switchh.css" rel="stylesheet" />

<div class="row">
    <div class="col-xl-1 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    <div id="chart"></div>
                </div>
                <div class="widget-data">
                    <div class="h4 mb-0">@Model.products.Count</div>
                    <div class="weight-600 font-14">Total Product</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-1 mb-30">
        <div class="card-box height-100-p widget-style1">
            <div class="d-flex flex-wrap align-items-center">
                <div class="progress-data">
                    <div id="chart"></div>
                </div>
                <div class="widget-data">
                    <div class="h4 mb-0">@Model.orders.Count</div>
                    <div class="weight-600 font-14">Total Request</div>
                </div>
            </div>
        </div>
    </div>
</div>


<hr />
<br />

<div class="card-box mb-30">
    <h2 class="h4 pd-20">Categories</h2>
    <table class="data-table table nowrap">
        <tbody>
            @{

                foreach (var item in Model.categories)
                {
                    <tr>
                        <td>
                            <h5 class="font-16">@item.CategoryName</h5>
                        </td>
                        <td>@Html.Raw(item.Description)</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="/Admin/CategoryDetails?id=@item.Id"><i class="dw dw-edit2"></i>Edit</a>
                                    <a class="dropdown-item" href="/Admin/CategoryDeleted?id=@item.Id"><i class="dw dw-delete-3"></i>Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<br />

<div class="card-box mb-30">
    <h2 class="h4 pd-20">Product Table</h2>
    <table class="data-table table nowrap">
        <thead>
            <tr>
                <th class="table-plus datatable-nosort">Image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Weight</th>
                <th class="datatable-nosort">Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.products)
                {
                    <tr>
                        <td class="table-plus">
                            <img src="~/assets/images/menu/@item.MiniImage" width="70" height="70" alt="">
                        </td>
                        <td>
                            <h5 class="font-16">@item.ProductName</h5>
                        </td>
                        <td>@item.Price</td>
                        <td>@item.Weight</td>
                        <td>
                            <div class="dropdown">
                                <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                    <i class="dw dw-more"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                    <a class="dropdown-item" href="/Admin/ProductEdit?Id=@item.ProductId"><i class="dw dw-edit2"></i>Edit</a>
                                    <a class="dropdown-item" href="/Admin/DeleteProduct?Id=@item.ProductId"><i class="dw dw-delete-3"></i>Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
<br />



<div class="footer-wrap pd-20 mb-20 card-box">
    Created By <a href="https://mersusbilisim.com/" target="_blank">Mersus Bilişim</a>
</div>


<script src="~/Content/Admin/src/plugins/apexcharts/apexcharts.min.js"></script>

