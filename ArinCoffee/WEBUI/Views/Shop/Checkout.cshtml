@model Entities.Models.DTO.AdressViewModel
<main>
    <!-- breadcrumb area start -->
    <section class="breadcrumb-area pt-140 pb-140 bg_img" data-background="assets/images/bg/breadcrumb-bg-1.jpeg" data-overlay="dark" data-opacity="5">
        <div class="shape shape__1"><img src="~/assets/images/shape/breadcrumb-shape-1.png" alt=""></div>
        <div class="shape shape__2"><img src="~/assets/images/shape/breadcrumb-shape-2.png" alt=""></div>
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center">
                    <h2 class="page-title">Arin Coffee Checkout</h2>
                    <div class="Arin Coffee-breadcrumb breadcrumbs">
                        <ul class="list-unstyled d-flex align-items-center justify-content-center">
                            <li class="Arin Coffeebcrumb-item duxinbcrumb-begin">
                                <a href="index.html"><span>Home</span></a>
                            </li>
                            <li class="Arin Coffeebcrumb-item duxinbcrumb-end">
                                <span>Faq</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- breadcrumb area end -->
    <!-- cart area start -->
    <div class="checkout-area pt-120 pb-120">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">
                    <div class="cart-wrapper checkout-wrapper">
                        <div class="row">
                            <form action="/Shop/AddOrderAdress" method="post">
                                <div class="col-xl-9">
                                    <div class="checkout-top">
                                        <h4 class="title">Payment Mathod</h4>

                                        <div class="tab-content" id="pdContent">
                                            <div class="tab-pane fade show active" id="pd-1" role="tabpanel" aria-labelledby="pd-1-tab">
                                                <div class="cart-form">

                                                    <div class="row">
                                                        <div class="col-xl-6">
                                                            <div class="from-group mt-30">
                                                                <label for="fname">First Name*</label>
                                                                <input type="text" asp-for="adress.FirstName" id="fname" placeholder="First Name" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-6">
                                                            <div class="from-group mt-30">
                                                                <label for="lname">Last Name*</label>
                                                                <input type="text" asp-for="adress.LastName" id="lname" placeholder="Last Name" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-12">
                                                            <div class="from-group mt-30">
                                                                <label for="cname">Company name (optional)</label>
                                                                <input type="text" asp-for="adress.CompanyName" id="cname" placeholder="Company Name">
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-12">
                                                            <div class="from-group mt-30">
                                                                <label for="rname">Country / Region *</label>
                                                                <input type="text" asp-for="adress.Country" id="rname" placeholder="Country" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-12">
                                                            <div class="from-group mt-30">
                                                                <label for="hname">Street address *</label>
                                                                <input type="text" asp-for="adress.Street" id="hname" placeholder="House number & State" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-12">
                                                            <div class="from-group mt-30">
                                                                <label for="tname">Town / City *</label>
                                                                <input type="text" asp-for="adress.Town" id="tname" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-12">
                                                            <div class="from-group mt-30">
                                                                <label for="zname">Postcode / ZIP (optional)*</label>
                                                                <input type="text" asp-for="adress.PostCode" id="zname" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-6">
                                                            <div class="from-group mt-30">
                                                                <label for="tel">Phone</label>
                                                                <input type="tel" asp-for="adress.Phone" id="tel" placeholder="Enter your number.." required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-6">
                                                            <div class="from-group mt-30">
                                                                <label for="email">Email</label>
                                                                <input type="email" asp-for="adress.Email" id="email" placeholder="Enter your mail.." required>
                                                            </div>
                                                        </div>
                                                        <div class="col-xl-12">
                                                            <div class="from-group mt-30">
                                                                <label for="ainfo">Additional Information*</label>
                                                                <textarea asp-for="adress.AdditionalInfo" id="ainfo" placeholder="Note about your order, Special note for delevery !" required></textarea>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-8">
                                            <div class="cart-total mt-45 text-end">
                                                <h2 class="title text-start">Cart Total</h2>
                                                <div class="ct-sub">
                                                    <span>Sub Total</span>
                                                    <span>$ @Model.TotalPrice</span>
                                                </div>
                                                <div class="ct-sub ct-sub__total">
                                                    <span>Total</span>
                                                    <span>$ @Model.TotalPrice</span>
                                                </div>
                                                <button type="submit" class="site-btn">Procced to checkout</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- cart area end -->


</main>